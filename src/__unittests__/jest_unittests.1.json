{
  "bail": false,
  "verbose": true,
  "transform": {
    "^.+\\.(ts|tsx)$": "typescript-babel-jest"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/lib",
    "<rootDir>/lib_es6",
    "/node_modules/",
    "fixtures.ts",
    "/fixtures/"
  ],
  "moduleFileExtensions": [
    "js", "jsx", "ts", "tsx", "node"
  ],
  "roots": [
    "<rootDir>/src/__unittests__/Logger",
    "<rootDir>/src/__unittests__/Renderer"
  ],
  "testRegex": "<rootDir>/src/__unittests__/.*\\.test.(ts|tsx|js|jsx)$"
}