{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "lib_es6"
  },
  "filesGlob": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/**/*.d.ts"
  ],
  "exclude": [
    "src/__unittests__",
    "storybook-ts",
    "docs", "docs_ts_compiled",
    "docs_src",
    "dts-generator.js",
    "dist",
    "node_modules",
    "!node_modules/rxjs",
    "lib",
    "lib_es6",
    "examples",
    "src_old",
    "reactive-renderer.d.ts",
    "webpack"
  ],
  "compileOnSave": false
}